extends layout

block append head
  link(rel='stylesheet', href='/stylesheets/index.css')
  script(src='/javascripts/index.js')
  
block contents
  section#container.container
    header.row
        h1.offset3.span6 WebIRC
    div.row
      div.offset3.span6
        form#connect(method='post', action='/chat')
          div.control-group
            label.control-label(for='nickname') Nickname (required)
            div.controls
              input#nickname.offset3.span6(type='text', name='nickname', placeholder='사용할 닉네임을 입력해주세요', autocomplete='off')
              p#help-of-nickname.help-block
          
          div.control-group
            label.control-label(for='channel') Channel (required)
            div.controls
              input#channel.offset3.span6(type='text', name='channel', placeholder='입장할 채널을 입력해주세요', autocomplete='off')
              p#help-of-channel.help-block
              
          div.control-group
            label.control-label(for='password') Password (optional)
            div.controls
              input#password.offset3.span6(type='text', placeholder='비공개 채널이라면, 비밀번호를 입력해주세요', autocomplete='off')
              p#help-of-password.help-block
          
          div#button-container
            label.assistive-element(for='submit') Submit
            button#submit.btn-large.btn-info(type='submit')
              i.icon-share-alt
              |  Submit
    footer.row
